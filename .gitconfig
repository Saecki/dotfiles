[init]
    defaultBranch = main

[core]
    pager = delta

[user]
    email = tobiasschmitz2001@gmail.com
    name = Tobias Schmitz

[gpg]
    format = ssh

[commit]
    gpgsign = true

[pull]
    ff = only

[merge]
    ff = only

[delta]
    features = mine
    side-by-side = true
    line-numbers = true
    line-numbers-left-format = "{nm:>4}│ "
    line-numbers-right-format = "{np:>4}│ "

[include]
    path = "~/.config/git/local.gitconfig"

[include]
    path = "~/.config/delta/colors/current.gitconfig"
