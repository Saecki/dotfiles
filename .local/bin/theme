#!/bin/sh

LIGHT_THEME="Adwaita"
DARK_THEME="Adwaita-dark"

apply() {
    gsettings set org.gnome.desktop.interface gtk-theme "$1"
}

toggle() {
    case "$1" in
        "'$LIGHT_THEME'" ) dark ;;
        "'$DARK_THEME'" ) light ;;
        * ) dark ;;
    esac
}

dark() {
    alco -a apply minedark&
    apply "$DARK_THEME"
}

light() {
    alco -a apply minelight&
    apply "$LIGHT_THEME"
}

current=$(gsettings get org.gnome.desktop.interface gtk-theme)
case "$1" in
    "toggle" ) toggle "$current" ;;
    "dark" ) dark ;;
    "light" ) light ;;
esac
